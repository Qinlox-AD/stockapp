<mvc:View controllerName="stockappui.controller.Warehouse"
          xmlns:mvc="sap.ui.core.mvc"
          xmlns="sap.m"
          displayBlock="true">
  <Page id="WarehousePage" title="{i18n>warehouseTitle}" titleAlignment="Center">
    <content>
      <VBox justifyContent="Center" alignItems="Center" width="100%" height="100%">
        <VBox class="sapUiSmallMargin">
          <Label text="{i18n>warehouseLabel}" labelFor="inpWarehouse"/>
          <Input id="inpWarehouse"
                 value="{vm>/warehouse}"
                 placeholder="{i18n>warehousePlaceholder}"
                 submit="onWarehouseEnter"
                 liveChange="onLiveChangeWarehouse"/>
        </VBox>
      </VBox>
    </content>
    <footer>
      <Toolbar>
        <Button text="{i18n>exportToExcel}" icon="sap-icon://excel-attachment" press="onExportExcel"/>
        <ToolbarSpacer/>
        <Button text="{i18n>enter}" type="Emphasized" press="onWarehouseEnter"/>
      </Toolbar>
    </footer>
  </Page>
</mvc:View>
